<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_sub_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/px_8"
        android:paddingTop="@dimen/px_8">

        <TextView
            android:id="@+id/sub_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingEnd="@dimen/px_16"
            android:paddingLeft="0dp"
            android:paddingRight="@dimen/px_16"
            android:paddingStart="0dp"
            android:text="@string/app_name"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/px_14" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sub_image"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/px_16"
            android:layout_marginRight="@dimen/px_16"
            android:scaleType="fitXY"
            android:src="@drawable/img"
            app:riv_corner_radius_bottom_left="@dimen/px_8"
            app:riv_corner_radius_bottom_right="@dimen/px_8"
            app:riv_corner_radius_top_left="@dimen/px_8"
            app:riv_corner_radius_top_right="@dimen/px_8" />

    </LinearLayout>

    <View
        android:id="@+id/line_close_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_0.5"
        android:background="@color/colorTextTitle" />

</LinearLayout>
