<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:layout_margin="@dimen/px_16">

    <LinearLayout
        android:id="@+id/layout_sub_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="@dimen/px_8"
            android:paddingBottom="@dimen/px_8"
            android:paddingTop="@dimen/px_8">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/sub_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/px_8"
                android:scaleType="fitXY"
                android:src="@drawable/img"
                app:riv_corner_radius_bottom_left="@dimen/px_8"
                app:riv_corner_radius_bottom_right="@dimen/px_8"
                app:riv_corner_radius_top_left="@dimen/px_8"
                app:riv_corner_radius_top_right="@dimen/px_8" />

            <TextView
                android:id="@+id/sub_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_8"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/px_14" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>