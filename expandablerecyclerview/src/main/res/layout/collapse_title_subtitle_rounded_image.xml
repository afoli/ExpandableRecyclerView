<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_68"
        android:background="@drawable/list_item_selector"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/px_48"
            android:layout_height="@dimen/px_48"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/icon_image"
                android:layout_width="@dimen/px_48"
                android:layout_height="@dimen/px_48"
                android:layout_centerInParent="true"
                android:contentDescription="@string/desc" />

            <ir.thebigbang.expandablerecyclerviewlibrary.customview.TvIcon
                android:id="@+id/icon_text"
                android:layout_width="@dimen/px_48"
                android:layout_height="@dimen/px_48"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/icon_down"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/px_24" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="@dimen/px_2"
                android:paddingEnd="@dimen/px_16"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/px_16"
                android:paddingStart="0dp"
                android:text="@string/app_name"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/px_16" />

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingEnd="@dimen/px_16"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/px_16"
                android:paddingStart="0dp"
                android:paddingTop="@dimen/px_2"
                android:text="@string/app_name"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/px_16" />

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/px_16"
            android:layout_marginRight="@dimen/px_16"
            android:scaleType="fitXY"
            android:src="@drawable/img"
            app:riv_corner_radius_bottom_left="@dimen/px_8"
            app:riv_corner_radius_bottom_right="@dimen/px_8"
            app:riv_corner_radius_top_left="@dimen/px_8"
            app:riv_corner_radius_top_right="@dimen/px_8" />

    </LinearLayout>

    <View
        android:id="@+id/line_close_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_0.5"
        android:background="@color/colorTextTitle" />

</LinearLayout>
